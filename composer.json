{
    "name": "ezsystems/ezplatform-graphql",
    "description": "GraphQL server for the eZ Platform Open Source CMS Repository.",
    "type": "ezplatform-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Bertrand Dunogier",
            "email": "bertrand.dunogier@ez.no"
        }
    ],
    "replace": {
        "bdunogier/ezplatform-graphql-bundle": "self.version"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {"type": "vcs", "url": "https://github.com/webhdx/spec-gen.git"},
        {"type": "vcs", "url": "https://github.com/webhdx/memio.git"},
        {"type": "vcs", "url": "https://github.com/webhdx/twig-template-engine.git"},
        {"type": "vcs", "url": "https://github.com/webhdx/JMSTranslationBundle.git"},
        {"type": "vcs", "url": "https://github.com/webhdx/Routing.git"}
    ],
    "require": {
        "php": "^7.3",
        "ext-dom": "*",
        "ezsystems/ezpublish-kernel": "dev-symfony5 as 8.0.x-dev",
        "ezsystems/ezplatform-admin-ui": "dev-symfony5 as 2.0.x-dev",
        "ezsystems/ezplatform-richtext": "dev-symfony5 as 2.0.x-dev",
        "overblog/graphql-bundle": "^0.13",
        "erusev/parsedown": "^1.7",
        "symfony/dependency-injection": "^5.0",
        "symfony/http-kernel": "^5.0",
        "symfony/console": "^5.0",
        "symfony/filesystem": "^5.0",
        "symfony/yaml": "^5.0",
        "symfony/config": "^5.0",
        "symfony/http-foundation": "^5.0",
        "symfony/serializer": "^5.0"
    },
    "require-dev": {
        "overblog/graphiql-bundle": "^0.2",
        "phpspec/phpspec": "^6.1",
        "friendsofphp/php-cs-fixer": "^2.16.0",
        "ezsystems/ezplatform-code-style": "^0.1.0",
        "mikey179/vfsstream": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "EzSystems\\EzPlatformGraphQL\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\EzSystems\\EzPlatformGraphQL\\Tools\\": "spec/Tools",
            "spec\\EzSystems\\EzPlatformGraphQL\\": "spec/EzSystems/EzPlatformGraphQL"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "scripts": {
        "fix-cs": "@php ./vendor/bin/php-cs-fixer fix -v --show-progress=estimating"
    }
}
